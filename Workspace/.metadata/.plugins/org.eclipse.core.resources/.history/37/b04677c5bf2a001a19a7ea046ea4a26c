<script type="text/javascript">
function sum(){
var num1=prompt("Enter first number :");
var num2=prompt("Enter second number :");
var result=parseInt(num1)+parseInt(num2);
alert("Sum="+result);
}

function demo(){
	var res=confirm("Do you want to move ahead?");
	if(res ==true){
		alert("Move ahead");
	}
	else{
		alert("Did not move ahead");
	}
}

function displayGreetings(){
	name=promt("Enter full name : "")
	ver=confirm("Do you want to con?")
	if(ver==true)
		document.write("Welcome"+name.charAt(0))

}
</script>

</head>
<body>
<h1>CLICK ANY</h1>
<input type="button" value="Add" onclick="sum()"/><br/>
<input type="button" value="Go" onclick="demo()"/><br/>
<input type="button" value="Greet me" onclick="displayGreetings()"/>


