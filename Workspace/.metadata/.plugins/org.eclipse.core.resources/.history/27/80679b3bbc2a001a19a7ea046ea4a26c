<!DOCTYPE html>
<html>
<script type="text/javascript">
function sum(){
var num1=prompt("Enter first number :");
var num2=prompt("Enter second number :");
var result=parseInt(num1)+parseInt(num2);
alert("Sum="+result);
}

function demo(){
	var res=confirm("Do you want to move ahead?");
	if(res ==true){
		alert("Move ahead");
	}
	else{
		alert("Did not move ahead");
	}
}

function displayGreetings(msg){
	if(msg==null)
		{
		msg="Hi"
		}
	alert(msg)
}
</script>
<head>
<meta charset="ISO-8859-1">
<title>JAVASCRIPT</title>
</head>
<body>
<h1>CLICK</h1>
<input type="button" value="Add" onclick="sum()"/><br/>
<input type="button" value="Go" onclick="demo()"/><br/>
<input type="button" value="Greet me" onclick="displayGreetings('Ho ho ho')"/>


</body>
</html>